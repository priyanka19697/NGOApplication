= form_with(model: @campaign, url: donate_path,  local: true) do |f|
  = render 'shared/error_messages', object: f.object
  .field
    = f.text_area :content,readonly: true
    = f.text_field :duration, readonly: true
    = f.text_field :category, readonly: true 
    = f.number_field :amount, placeholder: "enter amount"
  = f.submit "Donate", class: "btn btn-primary"

