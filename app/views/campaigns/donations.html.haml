= form_with(model: @campaign, url: create_donations_path, local: true) do |f|
  = render 'shared/error_messages', object: f.object
  .field
    = f.text_area :content,readonly: true
    = f.text_field :duration, readonly: true
    = f.text_field :category, readonly: true 
  = f.submit "Donate to this campaign", class: "btn btn-primary"