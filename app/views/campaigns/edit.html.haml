= form_with(model: @campaign, local: true) do |f|
  = render 'shared/error_messages', object: f.object
  .field
    = f.text_area :content,readonly: true
    = f.text_field :duration, readonly: true
    = f.text_field :category, readonly: true 
    = f.text_field :amount, placeholder: "enter amount"
  = f.submit "Donate", class: "btn btn-primary"
  .image
    = f.file_field :image, accept: "image/jpeg, image/gif, image/png", readonly: true

